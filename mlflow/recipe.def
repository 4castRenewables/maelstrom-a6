Bootstrap: docker-daemon
From: a6-mlflow:latest

%environment
    export PATH=/venv/bin:$PATH
    # Silence git warning by MLflow
    export GIT_PYTHON_REFRESH=quiet

%files
    mlflow/train_kmeans.py /opt/train_kmeans.py
    mlflow/train_hdbscan.py /opt/train_hdbscan.py
    mlflow/train_temporal.py /opt/train_temporal.py
    mlflow/grid_search.py /opt/grid_search.py

%runscript
    exec "$@"

%startscript
    exec "$@"
